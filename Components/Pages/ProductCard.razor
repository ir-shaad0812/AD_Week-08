<h3>ProductCard</h3>

<div class="card product-card shadow-sm">
    <div class="card-body">
        @if (!string.IsNullOrEmpty(ImageUrl))
        {
            <img src="@ImageUrl" class="card-img-top mb-3" alt="@ProductName" style="height: 200px; object-fit: cover;">
        }
        else
        {
            <div class="text-center mb-3" style="height: 200px; background-color: #f8f9fa; display: flex; align-items: center; justify-content: center;">
                <span class="text-muted">No Image</span>
            </div>
        }

        <h5 class="card-title">@ProductName</h5>
        <p class="card-text text-primary fw-bold">Price: $@Price.ToString("F2")</p>
        <div class="d-flex justify-content-between align-items-center">
            <div class="likes-section">
                <button class="btn btn-sm btn-outline-danger" @onclick="LikeProduct">
                    <i class="bi bi-heart-fill"></i> Like
                </button>
                <span class="ms-2 text-muted">@LikesCount likes</span>
            </div>
            <span class="badge bg-success">In Stock</span>
        </div>
    </div>
</div>

<style>
    .product-card {
        margin-bottom: 1.5rem;
        max-width: 300px;
        border: 1px solid #dee2e6;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }
</style>

@code {
    [Parameter]
    public string ProductName { get; set; } = string.Empty;

    [Parameter]
    public decimal Price { get; set; }

    [Parameter]
    public string ImageUrl { get; set; } = string.Empty;

    [Parameter]
    public int LikesCount { get; set; }

    [Parameter]
    public EventCallback<int> OnLike { get; set; }

    private async Task LikeProduct()
    {
        LikesCount++;
        await OnLike.InvokeAsync(LikesCount);
    }
}